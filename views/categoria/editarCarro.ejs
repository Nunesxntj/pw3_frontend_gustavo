<%- include('../partials/header.ejs') %>

<body>

    <div class="container">

        <%- include('../partials/menu.ejs') %>

        <div class="card">

            <div class="card-header">
                <h3>EDITAR CARROS</h3>

            </div>

            <div class="card-body">

                <form action="/editarCarro" method="post">

                    <label for="nome_carro"></label>
                    <input 
                    class="form-control" type="text" 
                    name="nome_carro" id="nome_carro"
                    value="<%= carro.data.nome_carro %>">

                    <input 
                    type="hidden" 
                    name="cod_carro" 
                    value="<%= carro.data.cod_carro %>">

                    

                    <button class="btn btn-success mt-2">EDITAR</button>

                </form>

            </div>

        </div>

    </div>

</body>

<%- include('../partials/footer.ejs') %>

</html>